<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="AppCep.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <Image x:Name="ImgLogo"/>
        <Entry Placeholder="Digite apenas os números do CEP" PlaceholderColor="#FFBF00" BackgroundColor="#FFFFFF" x:Name="txtCEP"/>
        <Button Text="BUSCAR CEP" TextColor="#FFFFFF" BackgroundColor="#00416B" x:Name="btnBuscar" Clicked="btnBuscar_Clicked"/>

        <Label Text="" x:Name="RESULTADO"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

    </StackLayout>

</ContentPage>
